<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Domain Übersicht</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Detailansicht <%= domainName %></h1>
        <a href="/" class="btn btn-primary btn-sm">
          Zurück
        </a>
        <div class="row mt-4">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Typ</th>
                            <th>Content</th>
                            <th>Zuletzt geändert</th>
                            <th>TTL</th>
                            <th>Disabled</th>
                            <th>ID</th>
                            <th>Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dnsRecords.forEach(record => { %>
                        <tr>
                            <td><%= record.name %></td>
                            <td><%= record.type %></td>
                            <td style="word-break: break-word; white-space: normal; max-width: 250px;"><%= record.content %></td>
                            <td><%= new Date(record.changeDate).toLocaleString() %></td>
                            <td><%= record.ttl %></td>
                            <td><%= record.disabled ? "Ja" : "Nein" %></td>
                            <td><%= record.id %></td>
                            <td>
                                <button class="btn btn-danger btn-sm" onclick="deleteRecord('<%= record.id %>')">Löschen</button>
                                <button class="btn btn-warning btn-sm" onclick="editRecord('<%= record.id %>')">Bearbeiten</button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <button class="btn btn-success mt-3">Neuen Eintrag hinzufügen</button>
        </div>
    </div>

    <script>
        function deleteRecord(recordId) {
            if (confirm("Möchtest du diesen Eintrag wirklich löschen?")) {
                fetch(`/dns-records/${recordId}`, { method: "DELETE" })
                    .then(response => response.json())
                    .then(data => {
                        alert("Eintrag gelöscht");
                        location.reload();
                    })
                    .catch(error => console.error("Fehler beim Löschen:", error));
            }
        }

        function editRecord(recordId) {
            window.location.href = `/edit-record/${recordId}`;
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
