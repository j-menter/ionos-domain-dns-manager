<%- include('partials/header') -%>
<div class="container mt-4">
  <h1 class="text-center">Detailansicht <%= domainName %></h1>
  <a href="/" class="btn btn-primary btn-sm">Zurück</a>

  <div class="row mt-4">
    <div class="col-md-12">
      <h3>Subdomain auswählen</h3>
      <select id="subdomainFilter" class="form-select">
        <option value="">Alle anzeigen</option>
        <% if (subdomains && subdomains.length) { %>
          <% subdomains.forEach(subdomain => { %>
            <option value="<%= subdomain %>"><%= subdomain %></option>
          <% }); %>
        <% } %>
      </select>

      <h3 class="mt-3">DNS Einträge</h3>
      <a href="/domain/<%= domainName %>/createDns" class="btn btn-success btn-sm">
        DNS-Eintrag / Subdomain Hinzufügen
      </a>
      <table id="dnsTable" 
             class="table table-striped"
             data-toggle="table"
             data-search="true"
             data-pagination="true"
             data-filter-control="true">
        <thead>
          <tr>
            <th data-field="name" data-sortable="true">Name</th>
            <th data-field="type" data-sortable="true">Typ</th>
            <th data-field="content">Content</th>
            <th data-field="changeDate" data-sortable="true">Zuletzt geändert</th>
            <th data-field="ttl" data-sortable="true">TTL</th>
            <th data-field="disabled" data-sortable="true">Disabled</th>
            <th data-field="id" data-sortable="true">ID</th>
            <th data-field="actions" data-formatter="actionFormatter">Aktionen</th>
          </tr>
        </thead>
        <tbody>
          <% if (dnsRecords && dnsRecords.length) { %>
            <% dnsRecords.forEach(record => { %>
              <tr data-subdomain="<%= record.name %>">
                <td><%= record.name %></td>
                <td><%= record.type %></td>
                <td style="word-break: break-word; white-space: normal; max-width: 250px;"><%= record.content %></td>
                <td><%= new Date(record.changeDate).toLocaleString() %></td>
                <td><%= record.ttl %></td>
                <td><%= record.disabled ? "Ja" : "Nein" %></td>
                <td><%= record.id %></td>
                <!-- Dieser manuell gerenderte Inhalt wird von Bootstrap Table beim Neuladen überschrieben -->
                <td>
                  <a href="/domain/<%= domainName %>/delete/<%= record.id %>" class="btn btn-danger btn-sm mb-2">
                    Löschen
                  </a>
                  <a href="/domain/<%= domainName %>/edit/<%= record.id %>" class="btn btn-warning btn-sm mb-2">
                    Bearbeiten
                  </a>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="8" class="text-center">Keine DNS-Einträge vorhanden</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  // Stelle sicher, dass dnsRecords und subdomains vom Server als JSON verfügbar sind
  const dnsRecords = <%- JSON.stringify(dnsRecords || []) %>;
  const subdomains = <%- JSON.stringify(subdomains || []) %>;
  // domainName für die clientseitige Verwendung definieren:
  const domainName = "<%= domainName %>";
  
  console.log("DNS Records im Frontend geladen:", dnsRecords);
  console.log("Subdomains im Frontend geladen:", subdomains);

  /**
   * Formatter-Funktion für die Aktionsspalte.
   * Diese Funktion wird von Bootstrap Table für jeden Datensatz (row) aufgerufen.
   */
  function actionFormatter(value, row, index) {
    return `
      <a href="/domain/${domainName}/delete/${row.id}" class="btn btn-danger btn-sm mb-2">
        Löschen
      </a>
      <a href="/domain/${domainName}/edit/${row.id}" class="btn btn-warning btn-sm mb-2">
        Bearbeiten
      </a>
    `;
  }

  document.addEventListener("DOMContentLoaded", function() {
    const subdomainFilter = document.getElementById("subdomainFilter");
    const dnsTable = $('#dnsTable');

    // Initialisiere die Bootstrap Table mit den übergebenen DNS-Datensätzen
    if (!dnsTable.data('bootstrap.table')) {
      console.log("Versuche, Bootstrap Table zu initialisieren...");
      dnsTable.bootstrapTable({
        data: dnsRecords,
        filterControl: true  // Aktiviert die Filtersteuerung
      });
      console.log("Bootstrap Table erfolgreich initialisiert.");
    }

    // Filterfunktion für die Subdomains
    if (subdomainFilter) {
      subdomainFilter.addEventListener("change", function() {
        const selectedSubdomain = this.value ? this.value.toLowerCase() : "";
        console.log("Ausgewählte Subdomain:", selectedSubdomain);

        let filteredRecords = dnsRecords;
        if (selectedSubdomain !== "") {
          filteredRecords = dnsRecords.filter(record => record.name.toLowerCase().includes(selectedSubdomain));
        }
        
        // Aktualisiere die Tabelle mit den gefilterten Einträgen
        dnsTable.bootstrapTable('load', filteredRecords);
      });
    }
  });
</script>
</body>
</html>
