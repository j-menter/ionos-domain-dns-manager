
<%- include('partials/header') -%>
    <div class="container mt-4">
        <h1 class="text-center">Detailansicht <%= domainName %></h1>

        <div class="row mt-4">
            <div class="col-md-12">
                <h3>Subdomain auswählen</h3>
                <select id="subdomainFilter" class="form-select">
                    <option value="">Alle anzeigen</option>
                    <% if (subdomains && subdomains.length) { %>
                        <% subdomains.forEach(subdomain => { %>
                            <option value="<%= subdomain %>"><%= subdomain %></option>
                        <% }); %>
                    <% } %>
                </select>
                
                <h3 class="mt-3">DNS Einträge</h3>
                <table id="dnsTable" 
                       class="table table-striped"
                       data-toggle="table"
                       data-search="true"
                       data-pagination="true">
                    <thead>
                        <tr>
                            <th data-field="name" data-sortable="true">Name</th>
                            <th data-field="type" data-sortable="true">Typ</th>
                            <th data-field="content">Content</th>
                            <th data-field="changeDate" data-sortable="true">Zuletzt geändert</th>
                            <th data-field="ttl" data-sortable="true">TTL</th>
                            <th data-field="disabled" data-sortable="true">Disabled</th>
                            <th data-field="id">ID</th>
                            <th>Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (dnsRecords && dnsRecords.length) { %>
                            <% dnsRecords.forEach(record => { %>
                            <tr data-subdomain="<%= record.name %>">
                                <td><%= record.name %></td>
                                <td><%= record.type %></td>
                                <td style="word-break: break-word; white-space: normal; max-width: 250px;"><%= record.content %></td>
                                <td><%= new Date(record.changeDate).toLocaleString() %></td>
                                <td><%= record.ttl %></td>
                                <td><%= record.disabled ? "Ja" : "Nein" %></td>
                                <td><%= record.id %></td>
                                <td>
                                    <button class="btn btn-danger btn-sm" onclick="deleteRecord('<%= record.id %>')">Löschen</button>
                                    <button class="btn btn-warning btn-sm" onclick="editRecord('<%= record.id %>')">Bearbeiten</button>
                                </td>
                            </tr>
                            <% }); %>
                        <% } else { %>
                            <tr><td colspan="8" class="text-center">Keine DNS-Einträge vorhanden</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <button class="btn btn-success mt-3">Neuen Eintrag hinzufügen</button>
        </div>
    </div>

    <script>
        document.getElementById("subdomainFilter").addEventListener("change", function() {
            const selectedSubdomain = this.value.toLowerCase();
            document.querySelectorAll("#dnsTable tbody tr").forEach(row => {
                const subdomain = row.getAttribute("data-subdomain").toLowerCase();
                row.style.display = selectedSubdomain === "" || subdomain.includes(selectedSubdomain) ? "table-row" : "none";
            });
        });

        function deleteRecord(recordId) {
            if (confirm("Möchtest du diesen Eintrag wirklich löschen?")) {
                fetch(`/dns-records/${recordId}`, { method: "DELETE" })
                    .then(response => response.json())
                    .then(data => {
                        alert("Eintrag gelöscht");
                        location.reload();
                    })
                    .catch(error => console.error("Fehler beim Löschen:", error));
            }
        }

        function editRecord(recordId) {
            window.location.href = `/edit-record/${recordId}`;
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.21.3/dist/bootstrap-table.min.js"></script>
</body>
</html>