<%- include('../partials/header') -%>

<div class="container my-5">
    <h1 class="text-center mb-4">DNS-Record hinzuf端gen</h1>
    
    <div class="form-container">
        <form action="/domain/<%= domain %>/createDns" method="POST">
            <div class="form-group">
                <label for="recordType">Typ</label>
                <input type="text" id="recordType" name="type" class="form-control" value="A" readonly>
            </div>
            
            <div class="form-group">
                <label for="hostname">Hostname</label>
                <input type="text" id="hostname" name="hostname" class="form-control" placeholder="@, www ...">
            </div>
            
            <div class="form-group">
                <label for="destination">Zeigt auf</label>
                <input type="text" id="destination" name="destination" class="form-control" placeholder="192.168.1.1 (IPv4-Adresse)">
            </div>
            
            <div class="form-group">
                <label for="ttl">TTL</label>
                <select id="ttl" name="ttl" class="form-control">
                    <option>1 Stunde</option>
                    <option>24 Stunden</option>
                    <option>1 Woche</option>
                </select>
            </div>
            
            <div class="preview">
                <p><strong>Vorschau:</strong> <%= domain %> 3600 IN A</p>
                <p><strong>Vorschau f端r www:</strong> www.<%= domain %> 3600 IN A</p>
                <a href="#">> DNS-Record f端r www nicht hinzuf端gen</a>
            </div>
            
            <div class="button-group">
                <button type="button" class="btn btn-secondary">Abbrechen</button>
                <button type="submit" class="btn btn-primary">Speichern</button>
            </div>
        </form>
    </div>
</div>

<style>
    .form-container {
        max-width: 500px;
        margin: auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    .form-group {
        margin-bottom: 15px;
    }
    .form-group label {
        display: block;
        font-weight: bold;
    }
    .preview {
        margin-top: 15px;
        font-size: 14px;
    }
    .button-group {
        display: flex;
        justify-content: space-between;
    }
</style>

<script>
    document.querySelector('.btn-secondary').addEventListener('click', function() {
        window.history.back();
    });
</script>

<%- include('../partials/footer') -%>
