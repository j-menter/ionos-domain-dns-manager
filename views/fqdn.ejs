<%- include('partials/header') -%>

<div class="container mt-4 mb-4">
  <h1 class="text-center">Domain Übersicht</h1>

  <table id="domainsTable"
         data-toggle="table"
         data-search="true"
         data-pagination="false"
         class="table table-striped">
    <thead>
      <tr>
        <th data-field="domain" data-sortable="true">Domain</th>
      </tr>
    </thead>
    <tbody>
      <% domains.forEach(domain => { %>
      <tr>
        <td>
          <!-- Der Link füllt den gesamten Zellinhalt -->
          <a href="/domain/<%= domain.name %>" class="full-row-link">
            <%= domain.name %>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<style>
  /* Der Link soll als Block-Element den ganzen Zellenbereich ausfüllen */
  .full-row-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
    padding: 10px;
  }
  /* Angepasste Hover-Farbe für den Standardmodus (dunkler als vorher) */
  .full-row-link:hover {
    background-color: #AED9E0;
  }
  td {
    padding: 0 !important;
  }

  /* Dark Mode Anpassung: Andere Hover-Farbe im Darkmode */
  [data-bs-theme="dark"] .full-row-link:hover {
    background-color: #495057;
  }
</style>

<%- include('partials/footer') -%>
