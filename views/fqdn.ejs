<%- include('partials/header') -%>

<div class="container mt-4">
  <h1 class="text-center">Domain Übersicht</h1>

  <table id="domainsTable"
         data-toggle="table"
         data-search="true"
         data-pagination="true"
         class="table table-striped">
    <thead>
      <tr>
        <th data-field="domain" data-sortable="true">Domain</th>
      </tr>
    </thead>
    <tbody>
      <% domains.forEach(domain => { %>
      <tr>
        <td>
          <!-- Der Link füllt den gesamten Zellinhalt -->
          <a href="/domain/<%= domain.name %>" class="full-row-link">
            <%= domain.name %>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<style>
  /* Der Link soll als Block-Element den ganzen Zellenbereich ausfüllen */
  .full-row-link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
    padding: 10px; /* Optional: Gleiche Padding wie in anderen Tabellen */
  }
  .full-row-link:hover {
    background-color: #D6EEEE; /* Optional: Hover-Hintergrund wie bei deiner anderen Tabelle */
  }
  td {
    padding: 0 !important;
  }
</style>

<%- include('partials/footer') -%>
