<%- include('partials/header') -%>

<style>
  /* F端gt horizontale Linien zwischen den Zeilen hinzu */
  table.table-striped tr {
    border-bottom: 1px solid #dee2e6;
  }
  table.table-striped tr:last-child {
    border-bottom: none;
  }
</style>

<div class="container my-4">
  <h1 class="text-center"></h1>
  <a id="back-btn" href="#" class="btn btn-primary btn-sm mb-2">Zur端ck</a>
  
  <div class="card" style="overflow: hidden;">
    <div class="card-body p-0" >
      <!-- Kompakte Tabelle mit Hover-Effekt und horizontalen Linien -->
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Typ</th>
            <th>Beschreibung</th>
            <th class="text-end"></th>
          </tr>
        </thead>

        <tbody>
          <tr class="clickable-row" data-record-type="A">
            <td><strong>A</strong></td>
            <td>Weist eine IPv4-Adresse zu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="AAAA">
            <td><strong>AAAA</strong></td>
            <td>Weist eine IPv6-Adresse zu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="CAA">
            <td><strong>CAA</strong></td>
            <td>Definiert einen SSL-Provider.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="CNAME">
            <td><strong>CNAME</strong></td>
            <td>Erstellt einen Alias f端r eine andere Domain.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="MX">
            <td><strong>MX</strong></td>
            <td>Weist einen Mailserver zu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="NS">
            <td><strong>NS</strong></td>
            <td>Weist einen alternativen Nameserver zu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="SRV">
            <td><strong>SRV</strong></td>
            <td>Definiert eine Serviceverbindung.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="IONOS_SPF">
            <td><strong>IONOS SPF (TXT)</strong></td>
            <td>Legitimiert IONOS als E-Mail-Absender.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="SPF">
            <td><strong>SPF (TXT)</strong></td>
            <td>Definiert legitime E-Mail-Sender.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="TXT">
            <td><strong>TXT</strong></td>
            <td>F端gt Textdaten wie DMARC oder DKIM hinzu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script src="/js/dnsTable.js"></script>
<%- include('partials/footer') -%>
