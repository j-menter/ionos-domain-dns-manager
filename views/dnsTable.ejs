<%- include('partials/header') -%>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const pathParts = window.location.pathname.split("/");
    const domain = pathParts[2];

    // Klickbare Zeilen: Alle <tr> mit data-record-type
    document.querySelectorAll("tr.clickable-row").forEach(row => {
      row.addEventListener("click", function () {
        window.location.href = `/domain/${domain}/createDns/${this.getAttribute("data-record-type")}`;
      });
      row.style.cursor = "pointer";
    });

    // Header-Text aktualisieren
    const header = document.querySelector("h1.text-center");
    if (header) {
      header.innerHTML = `DNS Records zu <b>${domain}</b> hinzufügen`;
    }

    // Back-Link aktualisieren
    const backBtn = document.getElementById("back-btn");
    if (backBtn) {
      backBtn.setAttribute("href", `/domain/${domain}/`);
    }
  });
</script>

<style>
  /* Fügt horizontale Linien zwischen den Zeilen hinzu */
  table.table-striped tr {
    border-bottom: 1px solid #dee2e6;
  }
  table.table-striped tr:last-child {
    border-bottom: none;
  }
</style>

<div class="container my-4">
  <h1 class="text-center"></h1>
  <a id="back-btn" href="#" class="btn btn-primary btn-sm mb-2">Zurück</a>
  
  <div class="card" style="overflow: hidden;">
    <div class="card-body p-0" >
      <!-- Kompakte Tabelle mit Hover-Effekt und horizontalen Linien -->
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Typ</th>
            <th>Beschreibung</th>
            <th class="text-end"></th>
          </tr>
        </thead>

        <tbody>
          <tr class="clickable-row" data-record-type="A">
            <td><strong>A</strong></td>
            <td>Weist eine IPv4-Adresse zu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="AAAA">
            <td><strong>AAAA</strong></td>
            <td>Weist eine IPv6-Adresse zu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="CAA">
            <td><strong>CAA</strong></td>
            <td>Definiert einen SSL-Provider.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="CNAME">
            <td><strong>CNAME</strong></td>
            <td>Erstellt einen Alias für eine andere Domain.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="MX">
            <td><strong>MX</strong></td>
            <td>Weist einen Mailserver zu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="NS">
            <td><strong>NS</strong></td>
            <td>Weist einen alternativen Nameserver zu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="SRV">
            <td><strong>SRV</strong></td>
            <td>Definiert eine Serviceverbindung.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="IONOS_SPF_TXT">
            <td><strong>IONOS SPF (TXT)</strong></td>
            <td>Legitimiert IONOS als E-Mail-Absender.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="SPF_(TXT)">
            <td><strong>SPF (TXT)</strong></td>
            <td>Definiert legitime E-Mail-Sender.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
          <tr class="clickable-row" data-record-type="TXT">
            <td><strong>TXT</strong></td>
            <td>Fügt Textdaten wie DMARC oder DKIM hinzu.</td>
            <td class="text-end"><i class="bi bi-chevron-right"></i></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
