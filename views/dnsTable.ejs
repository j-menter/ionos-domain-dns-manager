<%- include('partials/header') -%>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Die aktuelle Domain aus der URL extrahieren
    const pathParts = window.location.pathname.split("/");
    const domain = pathParts[2]; // "handyatelier.de" (je nach Position in der URL anpassen)

    // Alle Links in der Tabelle anpassen
    document.querySelectorAll(".clickable-row a").forEach((link) => {
      const recordType = link.getAttribute("href").split("/").pop();
      link.setAttribute("href", `/domain/${domain}/createDns/${recordType}`);
    });

    // Header-Text aktualisieren
    const header = document.querySelector("h1.text-center");
    if (header) {
      header.innerHTML = `DNS Records zu <b>${domain}</b> hinzuf端gen`;
    }

    // Back-Link aktualisieren
    const backBtn = document.getElementById("back-btn");
    if (backBtn) {
      backBtn.setAttribute("href", `/domain/${domain}/`);
    }
  });
</script>

