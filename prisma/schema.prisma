// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  benutzername String
  email        String   @unique
  passwordHash String
  isAdmin      Boolean  @default(false) // Neuer Admin-Flag
  domains      Domain[]
}

model Domain {
  id     Int    @id @default(autoincrement())
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}
